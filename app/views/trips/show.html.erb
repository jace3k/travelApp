<p id="notice"><%= notice %></p>

<% if logged_in? %>
  <% unless current_user.follows?(@trip) %>
    <%= link_to( "Zapisz się na tripa", action: :follow) %>
  <% else %>
    <%= link_to "Wypisz się z tripa", action: :unfollow %>
  <% end %>

  
<% end %>
<hr>

<h1><%= @trip.name %></h1>

<p>
  <strong>Name:</strong>
  <%= @trip.name %>
</p>

<p>
  <strong>Start:</strong>
  <%= @trip.start %>
</p>

<p>
  <strong>End:</strong>
  <%= @trip.end %>
</p>

<hr>

<h2>Zapisani na tego Tripa:</h2>
<ul>
  <% @trip.users.each do |user| %>
    <li><%= link_to user.username, user %></li>
  <% end %>
</ul>

<hr>

<h2>Miejsca</h2>
<ul>
  <% @trip.places.each do |place| %>
    <li><%= link_to place.name, place %></li>
  <% end %>
</ul>


<hr>


<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
